@{
    ViewData["Title"] = "Home Page";
}

@*Stephen wrote this code and styled this page*@

<div class="jumbotron mt-4" style="margin-bottom:10px" >
    <div class="text-center">
        <br />
        <br />
        <br />
        <h1 class="display-4">Welcome to Travel Experts</h1>
        <br />
        <h5> Quality travel packages for the discerning traveler.</h5>
    </div>
    @*<img id="img_logo" alt="Logo" src="@Url.Content("~/images/1105.jpg")" style="width:100%;" />*@

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="row" style="margin-bottom:-30px">
        <div class="col-md" style="border:solid;">
            <h2>Products and Packages</h2>
            <p>
                Check out the products and packages we're offering!
            </p>
            <p>
                <a runat="server" href="~/PnP" style="font-weight:bold;">Go &raquo;</a>
            </p>
        </div>
