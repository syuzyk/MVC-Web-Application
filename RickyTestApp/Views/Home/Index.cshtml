@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron mt-4" style="margin-bottom:10px">
    <div class="text-center">
        <br />
        <br />
        <br />
        <h1 class="display-4">Welcome to Travel Experts</h1>
        <br />
        <h5> Quality travel packages for the discerning traveler.</h5>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="row" style="margin-bottom:-30px">
        <div class="col-md" style="border:solid;">
            <h2>Register</h2>
            <p>
                Need a vacation? Create an account to book your dream getaway.
            </p>
            <p>
                <a class="btn btn-default" runat="server" href="~/Register/RegisterDetails" style="font-weight:bold;">Go &raquo;</a>
            </p>
        </div>
        &nbsp;
        <div class="col-md" style="border:solid;">
            <h2>Login</h2>
