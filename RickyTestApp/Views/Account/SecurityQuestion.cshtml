@model Group8.TravelExperts.Data.Domain.CustomersAuthentication
@{
    ViewData["Title"] = "SecurityQuestion";
}

<div class="jumbotron mt-4">
    <div class="text-center">
        <div class="row justify-content-center">
            <form asp-action="GetLink">
                <h3>@TempData.Peek("Security Question")</h3>
                <table class="table col-4">
                    <tr>
                        <td><input type="text" asp-for="SQAnswer1" /></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="submit" value="Submit" class="btn btn-primary" /></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>